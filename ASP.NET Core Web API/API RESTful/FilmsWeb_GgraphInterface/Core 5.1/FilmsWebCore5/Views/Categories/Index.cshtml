
@{
    ViewData["Title"] = "Categories List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<div class="container p-4">
    <div class="row">
        <div class="col-6" >
            <h2 class="text-primary"> Categories List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-success text-white">Create new category </a>
        </div>
    </div>

    <br/>
    <br />

    <div class="p-3">
        <table id="tblCategories" class="table table-striped table-bordered" style="width:100%" >
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Creation Date</td>
                <td>Actions</td>
            </tr>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/categories.js"></script>
}
