@model FilmsWebCore5.Models.Category
@{
    ViewData["Title"] = "Edit category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Edit category</h2>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-sm-12">
            @*//Method update from CategoriesController*@
            <form method="post" asp-action="Update">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Edit category</button>
                    </div>

                    <div class="col">
                        <a asp-action="Index">Back</a>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts{
    <script>
        $(function () {
            $("#DateCreation").datepicker({
                changeMonth: false,
                changeYear: false,
                yearRange: "1500:2023",
                dateFormat: "yy-mm-dd"
            }).datepicker("setDate", new Date())
        })
    </script>
}

